// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  password      String
  name          String
  role          String       @default("EMPLOYEE") // ADMIN or EMPLOYEE
  department    String?
  position      String?
  shiftType     String       @default("DAY") // DAY or NIGHT - defines default shift for employee
  profileImage  String?      // Profile picture URL/path
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  attendances   Attendance[]
}

model Attendance {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  date        DateTime  @default(now())
  shiftType   String    @default("DAY") // DAY or NIGHT
  amIn        DateTime?
  amOut       DateTime?
  pmIn        DateTime?
  pmOut       DateTime?
  nightIn     DateTime?
  nightOut    DateTime?
  // Scan photos for verification (anti-buddy punching)
  amInPhoto   String?
  amOutPhoto  String?
  pmInPhoto   String?
  pmOutPhoto  String?
  nightInPhoto  String?
  nightOutPhoto String?
  status      String    @default("ABSENT") // PRESENT, ABSENT, LATE, HALF_DAY
  workHours   Float?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, date, shiftType])
  @@index([userId])
  @@index([date])
  @@index([shiftType])
}

model Settings {
  id                  String   @id @default(cuid())
  // Day Shift Times
  amStartTime         String   @default("08:00")
  amEndTime           String   @default("12:00")
  pmStartTime         String   @default("13:00")
  pmEndTime           String   @default("17:00")
  // Night Shift Times
  nightStartTime      String   @default("22:00")
  nightEndTime        String   @default("06:00")
  // Grace Periods (minutes after start time before marked late)
  amGracePeriod       Int      @default(15)
  pmGracePeriod       Int      @default(15)
  nightGracePeriod    Int      @default(15)
  // Legacy field
  lateThreshold       Int      @default(15) // minutes
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
